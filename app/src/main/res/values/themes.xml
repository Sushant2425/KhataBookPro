<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyKhataPro" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="android:statusBarColor">@color/primary_dark</item>
    </style>
    
    <!-- Styles for CustomerDetailsActivity -->
    <style name="DetailsActionItem">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="DetailsActionIcon">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <!-- FIXED: Changed app:tint to android:tint -->
        <item name="android:tint">?attr/colorPrimary</item>
    </style>

    <style name="DetailsActionLabel" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="DetailsSummaryCard" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">8dp</item>
    </style>
    
    <style name="DetailsSummaryContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">12dp</item>
    </style>
    
    <style name="DetailsSummaryLabel" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="DetailsSummaryAmount" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TabButtonStyle" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:paddingHorizontal">22dp</item>
        <item name="android:minHeight">38dp</item>
        <item name="android:textSize">14sp</item>
    </style>


</resources>