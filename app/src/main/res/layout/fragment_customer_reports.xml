<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@android:color/white">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <!-- SearchView for filtering by name or mobile number -->

        <!-- Section Title -->
        <androidx.appcompat.widget.SearchView
            android:id="@+id/searchView"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="12dp"
            app:searchHintIcon="@color/black"
            android:background="@drawable/search_background"
            android:queryHint="Search by name or mobile number"
            app:iconifiedByDefault="false" />

        <TextView
            android:text="Customer Reports"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/text_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp" />

        <!-- RecyclerView for customer list -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvCustomerList"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:paddingBottom="8dp" />

    </LinearLayout>

    <!-- Floating action button for export all PDF -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabExportAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="90dp"
        android:layout_marginEnd="20dp"
        android:contentDescription="Export all reports"
        android:src="@drawable/ic_download"
        app:backgroundTint="@color/colorPrimary"
        app:tint="@android:color/white" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>
