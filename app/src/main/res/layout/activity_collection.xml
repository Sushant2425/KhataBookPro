<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.CollectionActivity">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/dashboard_header_background"
        android:padding="16dp">

        <TextView
            android:id="@+id/txtShopTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Current Shop"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/txtTotalDue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Due: â‚¹0"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:gravity="center" />

    </LinearLayout>

    <!-- Tabs -->
    <com.google.android.material.tabs.TabLayout
    android:id="@+id/tabLayout"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    app:tabMode="fixed"
    app:tabTextColor="#666"
    app:tabSelectedTextColor="#2196F3"
    app:tabIndicatorColor="#2196F3"
    app:tabIndicatorHeight="3dp"
    app:tabMinWidth="0dp"
    app:tabPaddingStart="12dp"
    app:tabPaddingEnd="12dp" />

    <!-- ViewPager -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Progress Bar Overlay -->
    <ProgressBar
        android:id="@+id/progressBarCollection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

    <!-- Empty State Overlay -->
    <TextView
        android:id="@+id/txtEmptyState"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="No data found"
        android:textSize="16sp"
        android:textColor="@android:color/darker_gray"
        android:padding="32dp"
        android:visibility="gone" />

</LinearLayout>
