<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    >

    <!-- Fixed Top Bar - Always visible, never scrolls -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#FFFFFF"
        android:elevation="2dp"
        app:contentInsetStart="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/btnBack"
                android:src="@drawable/ic_arrow_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:padding="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Back"
                app:tint="#212121"/>

            <TextView
                android:text="Product Details"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/btnBack"
                android:layout_marginStart="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvEditProduct"
                android:text="Edit"
                android:textColor="@color/purple_700"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="16dp"
                android:padding="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </com.google.android.material.appbar.MaterialToolbar>

    <!-- AppBar with collapsing content -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:background="@android:color/transparent"
        android:elevation="0dp"
        app:elevation="0dp">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:contentScrim="@android:color/transparent"
            app:titleEnabled="false">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.5">

                <!-- Product Info Card - Compact Design -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    app:cardElevation="1dp"
                    app:cardCornerRadius="12dp"
                    app:strokeWidth="0dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:padding="14dp"
                        android:background="#FFFFFF"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <!-- Product Name + Image - Compact -->
                        <LinearLayout
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/tvName"
                                    android:text="Product Name"
                                    android:textColor="#1A1A1A"
                                    android:textStyle="bold"
                                    android:textSize="18sp"
                                    android:maxLines="2"
                                    android:ellipsize="end"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <TextView
                                    android:id="@+id/tvCategory"
                                    android:text="Category • SKU"
                                    android:textSize="11sp"
                                    android:textColor="#757575"
                                    android:layout_marginTop="2dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/imgProduct"
                                android:layout_width="52dp"
                                android:layout_height="52dp"
                                android:layout_marginStart="12dp"
                                android:src="@drawable/ic_launcher_background"
                                android:scaleType="centerCrop"
                                app:civ_border_width="1dp"
                                app:civ_border_color="#E0E0E0"/>
                        </LinearLayout>

                        <!-- Divider -->
                        <View
                            android:background="#F0F0F0"
                            android:layout_marginTop="12dp"
                            android:layout_marginBottom="12dp"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"/>

                        <!-- PRICING - Compact Grid -->
                        <TextView
                            android:text="PRICING"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:textColor="#9E9E9E"
                            android:letterSpacing="0.12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:text="Sale Price"
                                    android:textSize="10sp"
                                    android:textColor="#757575"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <TextView
                                    android:id="@+id/tvSalePrice"
                                    android:text="₹0"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="#43A047"
                                    android:layout_marginTop="4dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:text="Purchase"
                                    android:textSize="10sp"
                                    android:textColor="#757575"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <TextView
                                    android:id="@+id/tvPurchasePrice"
                                    android:text="₹0"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="#FB8C00"
                                    android:layout_marginTop="4dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:text="Stock"
                                    android:textSize="10sp"
                                    android:textColor="#757575"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <TextView
                                    android:id="@+id/tvStock"
                                    android:text="0"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/purple_700"
                                    android:layout_marginTop="4dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Divider -->
                        <View
                            android:background="#F0F0F0"
                            android:layout_marginTop="12dp"
                            android:layout_marginBottom="12dp"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"/>

                        <!-- STOCK DETAILS - Compact -->
                        <TextView
                            android:text="STOCK DETAILS"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:textColor="#9E9E9E"
                            android:letterSpacing="0.12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:text="Stock Value"
                                    android:textSize="10sp"
                                    android:textColor="#757575"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <TextView
                                    android:id="@+id/tvStockValue"
                                    android:text="₹0"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    android:textColor="#1A1A1A"
                                    android:layout_marginTop="4dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:text="Unit"
                                    android:textSize="10sp"
                                    android:textColor="#757575"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <TextView
                                    android:id="@+id/tvUnit"
                                    android:text="---"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    android:textColor="#1A1A1A"
                                    android:layout_marginTop="4dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:text="Low Stock"
                                    android:textSize="10sp"
                                    android:textColor="#757575"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <TextView
                                    android:id="@+id/tvLowStock"
                                    android:text="0"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    android:textColor="#E53935"
                                    android:layout_marginTop="4dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Tax & Summary Combined Card - Compact -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="8dp"
                    app:cardElevation="1dp"
                    app:cardCornerRadius="12dp"
                    app:strokeWidth="0dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:background="#FFFFFF"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <!-- Tax Information Section -->
                        <LinearLayout
                            android:orientation="vertical"
                            android:padding="14dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:text="TAX INFORMATION"
                                android:textSize="10sp"
                                android:textStyle="bold"
                                android:textColor="#9E9E9E"
                                android:letterSpacing="0.12"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <LinearLayout
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:text="HSN Code"
                                        android:textSize="10sp"
                                        android:textColor="#757575"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>

                                    <TextView
                                        android:id="@+id/tvHSN"
                                        android:text="--"
                                        android:textSize="15sp"
                                        android:textStyle="bold"
                                        android:textColor="#1A1A1A"
                                        android:layout_marginTop="4dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                </LinearLayout>

                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:text="GST Rate"
                                        android:textSize="10sp"
                                        android:textColor="#757575"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>

                                    <TextView
                                        android:id="@+id/tvGST"
                                        android:text="--"
                                        android:textSize="15sp"
                                        android:textStyle="bold"
                                        android:textColor="#1A1A1A"
                                        android:layout_marginTop="4dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Divider -->
                        <View
                            android:background="#F0F0F0"
                            android:layout_marginStart="14dp"
                            android:layout_marginEnd="14dp"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"/>

                        <!-- Summary Section -->
                        <LinearLayout
                            android:orientation="vertical"
                            android:padding="14dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:text="SUMMARY"
                                android:textSize="10sp"
                                android:textStyle="bold"
                                android:textColor="#9E9E9E"
                                android:letterSpacing="0.12"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <LinearLayout
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:text="Total Loss"
                                        android:textSize="10sp"
                                        android:textColor="#757575"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>

                                    <TextView
                                        android:id="@+id/tvLossAmount"
                                        android:text="₹0"
                                        android:textSize="15sp"
                                        android:textStyle="bold"
                                        android:textColor="#E53935"
                                        android:layout_marginTop="4dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                </LinearLayout>

                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:text="Stock Added"
                                        android:textSize="10sp"
                                        android:textColor="#757575"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>

                                    <TextView
                                        android:id="@+id/tvStockAdded"
                                        android:text="0"
                                        android:textSize="15sp"
                                        android:textStyle="bold"
                                        android:textColor="#43A047"
                                        android:layout_marginTop="4dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                </LinearLayout>
                            </LinearLayout>

                            <TextView
                                android:visibility="gone"
                                android:id="@+id/tvViewMore"
                                android:text="View Detailed Report →"
                                android:textColor="@color/purple_700"
                                android:textStyle="bold"
                                android:textSize="13sp"
                                android:layout_marginTop="12dp"
                                android:background="?attr/selectableItemBackground"
                                android:padding="4dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Transaction History - Compact -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="12dp"
            android:background="@color/white"
            app:cardElevation="1dp"
            app:strokeWidth="0dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="wrap_content">

                <TextView
                    android:text="TRANSACTION HISTORY"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="#9E9E9E"
                    android:letterSpacing="0.12"
                    android:padding="14dp"
                    android:paddingBottom="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <!-- Table Header -->
                <LinearLayout
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    android:paddingBottom="8dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Stocks"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:textColor="#616161"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="STOCK OUT"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:textColor="#616161"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="STOCK IN"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:textColor="#616161"
                        android:gravity="end"
                        android:layout_marginEnd="15dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <!-- Divider -->
                <View
                    android:background="#F0F0F0"
                    android:layout_marginStart="14dp"
                    android:layout_marginEnd="14dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <!-- RecyclerView -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvHistory"
                    android:paddingTop="6dp"
                    android:paddingBottom="14dp"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    android:background="@color/white"
                    android:clipToPadding="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:overScrollMode="never"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>