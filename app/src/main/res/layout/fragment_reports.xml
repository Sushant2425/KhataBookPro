<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Section Title -->
        <TextView
            android:id="@+id/tx_reports_title"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/text_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
          />

        <!-- Customer Reports Row -->
        <LinearLayout
            android:id="@+id/rowCustomerReports"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:clickable="true"
            android:background="@color/gray"
            android:focusable="true"
            android:layout_marginBottom="8dp"
            android:elevation="2dp">

            <ImageView
                android:src="@drawable/custreport"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="Customer Reports Icon"/>

            <TextView
                android:text="Customer Reports"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_dark"
                android:layout_marginStart="12dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- Customer List Row -->
        <LinearLayout
            android:id="@+id/rowCustomerList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="@color/gray"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginBottom="8dp"
            android:elevation="2dp"
            android:layout_marginTop="8dp">

            <ImageView
                android:src="@drawable/custlist"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="Customer List Icon"/>

            <TextView
                android:text="Customer List"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_dark"
                android:layout_marginStart="12dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- Additional categories can be added similarly -->

    </LinearLayout>
</ScrollView>
