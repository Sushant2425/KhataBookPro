<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".fragments.DashboardFragment">

    <!-- AppBar with Compact Header -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:elevation="2dp">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <!-- Compact Header Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:background="@drawable/rounded_input">

                    <!-- Total Balance Section - Compact -->
                    <TextView
                        android:id="@+id/tv_balance_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Balance"
                        android:textSize="11sp"
                        android:textColor="@color/black"
                        android:fontFamily="sans-serif-medium"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_balance_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="₹0.00"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-black"
                        android:textColor="?attr/colorOnPrimary"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_balance_label" />

                    <!-- Thin Divider -->
                    <View
                        android:id="@+id/divider"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_marginTop="8dp"
                        android:alpha="0.3"
                        android:background="@color/black"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_balance_amount" />

                    <!-- You Will Get Section - Compact -->
                    <ImageView
                        android:id="@+id/iv_income_arrow"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/ic_arrow_upward"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/divider"
                        app:tint="@color/green" />

                    <TextView
                        android:id="@+id/tv_income_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:text="You will Give"
                        android:textSize="10sp"
                        android:fontFamily="sans-serif"
                        android:textColor="@color/black"
                        app:layout_constraintBottom_toBottomOf="@id/iv_income_arrow"
                        app:layout_constraintStart_toEndOf="@id/iv_income_arrow"
                        app:layout_constraintTop_toTopOf="@id/iv_income_arrow" />

                    <TextView
                        android:id="@+id/tv_income"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="22dp"
                        android:layout_marginTop="2dp"
                        android:text="₹0.00"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-black"
                        android:textColor="@color/green"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/iv_income_arrow" />

                    <!-- Vertical Guideline -->
                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.5" />

                    <!-- You Will Give Section - Compact -->
                    <ImageView
                        android:id="@+id/iv_expense_arrow"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/ic_arrow_downward"
                        app:layout_constraintStart_toEndOf="@id/guideline_vertical"
                        app:layout_constraintTop_toBottomOf="@id/divider"
                        app:tint="@color/red" />

                    <TextView
                        android:id="@+id/tv_expense_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:text="You will GET"
                        android:textSize="10sp"
                        android:fontFamily="sans-serif"
                        android:textColor="@color/black"
                        app:layout_constraintBottom_toBottomOf="@id/iv_expense_arrow"
                        app:layout_constraintStart_toEndOf="@id/iv_expense_arrow"
                        app:layout_constraintTop_toTopOf="@id/iv_expense_arrow" />

                    <TextView
                        android:id="@+id/tv_expense"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="18dp"
                        android:layout_marginTop="2dp"
                        android:text="₹0.00"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-black"
                        android:textColor="@color/red_700"
                        app:layout_constraintStart_toStartOf="@id/iv_expense_arrow"
                        app:layout_constraintTop_toBottomOf="@id/iv_expense_arrow" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Scrolling Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:paddingHorizontal="8dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- Compact Search and Filter Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="8dp"
            android:paddingHorizontal="8dp">

            <!-- Search Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:layout_weight="1"
                app:cardCornerRadius="21dp"
                app:cardElevation="2dp"
                android:layout_marginEnd="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <androidx.appcompat.widget.SearchView
                        android:id="@+id/search_view"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        app:queryHint="Search customer..."
                        android:background="@color/white"
                        app:iconifiedByDefault="false"
                        app:queryBackground="@android:color/transparent"
                        app:searchIcon="@drawable/ic_search" />

                    <ImageView
                        android:id="@+id/iv_filter_button"
                        android:layout_width="36dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/filterr"
                        android:padding="8dp"
                        android:background="@color/white"
                        android:clickable="true"
                        android:focusable="true"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- PDF Icon -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="42dp"
                android:layout_height="match_parent"
                app:cardCornerRadius="21dp"
                app:cardElevation="2dp">

                <ImageView
                    android:id="@+id/iv_pdf_report"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/pdf"
                    android:padding="10dp"
                    android:background="@color/white"
                    android:clickable="true"
                    android:focusable="true"/>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!-- RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_transactions"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingTop="4dp"
            android:paddingBottom="90dp"
            tools:listitem="@layout/item_transaction"/>

        <!-- Empty State -->
        <TextView
            android:id="@+id/tv_empty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="No transactions yet.\nAdd your first customer to get started."
            android:gravity="center"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:textColor="@color/black"
            android:alpha="0.6"
            android:visibility="gone"/>
    </LinearLayout>

    <!-- Compact Floating Action Buttons -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_transaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="90dp"
        app:fabSize="normal"
        android:visibility="gone"
        android:src="@drawable/ic_add"
        app:tint="@android:color/white"
        app:backgroundTint="#3F51B5"
        app:elevation="6dp"
        app:layout_behavior="com.sandhyasofttechh.mykhatapro.utils.ScrollAwareFabBehavior"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_customer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="90dp"
        app:fabSize="normal"
        android:visibility="gone"
        android:src="@drawable/ic_person_add"
        app:tint="@android:color/white"
        app:backgroundTint="#3F51B5"
        app:elevation="6dp"
        app:layout_behavior="com.sandhyasofttechh.mykhatapro.utils.ScrollAwareFabBehavior"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>