<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/splash_gradient"
    tools:context=".register.SplashActivity">

    <!-- Animated Background Circles -->
    <View
        android:id="@+id/circle1"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:background="@drawable/circle_bg_1"
        android:alpha="0.1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="-100dp"
        android:layout_marginEnd="-100dp"/>

    <View
        android:id="@+id/circle2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/circle_bg_2"
        android:alpha="0.08"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="-50dp"
        android:layout_marginStart="-50dp"/>

    <!-- Center Content Group -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/centerGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="40dp">

        <!-- Logo Container with Shadow Effect -->
        <androidx.cardview.widget.CardView
            android:id="@+id/logo_container"
            android:layout_width="170dp"
            android:layout_height="170dp"
            app:cardCornerRadius="85dp"
            app:cardElevation="12dp"
            android:alpha="0"
            app:cardBackgroundColor="#FFFFFF"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_gravity="center"
                android:src="@drawable/img"
                android:contentDescription="@string/app_name"
                android:scaleType="centerInside"
                android:padding="20dp"/>

        </androidx.cardview.widget.CardView>

        <!-- App Name with underline accent -->
        <LinearLayout
            android:id="@+id/name_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:alpha="0"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/logo_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tv_app_name_splash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textStyle="bold"
                android:textColor="#0A2A43"
                android:textSize="32sp"
                android:letterSpacing="0.05"
                android:fontFamily="sans-serif-medium"/>

            <View
                android:id="@+id/name_underline"
                android:layout_width="80dp"
                android:layout_height="4dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/underline_gradient"
                android:alpha="0"/>

        </LinearLayout>

        <!-- Tagline -->
        <TextView
            android:id="@+id/tv_tagline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Smart Business Management"
            android:textSize="14sp"
            android:textColor="#486581"
            android:alpha="0"
            android:layout_marginTop="12dp"
            android:letterSpacing="0.1"
            app:layout_constraintTop_toBottomOf="@id/name_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Loading Indicator -->
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:indeterminateTint="#0A2A43"
        android:alpha="0"
        android:layout_marginBottom="120dp"
        app:layout_constraintBottom_toTopOf="@id/tv_made_in_india"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="NotSibling" />

    <!-- Bottom Info Group -->
    <LinearLayout
        android:id="@+id/bottom_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:alpha="0"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Made in India Badge -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/badge_background"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/tv_made_in_india"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Made in India ðŸ‡®ðŸ‡³"
                android:textSize="14sp"
                android:textColor="#0A2A43"
                android:textStyle="bold"
                android:letterSpacing="0.05"/>

        </LinearLayout>

        <!-- Company Name -->
        <TextView
            android:id="@+id/tv_company_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Â© Sandhya SoftTech Pvt. Ltd."
            android:textSize="13sp"
            android:textColor="#486581"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ambejogai, Maharashtra"
            android:textSize="12sp"
            android:textColor="#627D98"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>