<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/white"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Top cards: Total Stock Value | Low Stock Items | View Report -->
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/white"

        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardTotalValue"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:layout_margin="4dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="3dp">

            <LinearLayout
                android:padding="8dp"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="Total Stock Value"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tvTotalStockValue"
                    android:text="â‚¹0.00"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardLowStock"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:layout_margin="4dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="3dp">

            <LinearLayout
                android:padding="8dp"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:background="@color/white"

                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="Low Stock Items"
                    android:textSize="12sp"
                    android:layout_gravity="center"
                    android:textColor="#666666"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tvLowStockCount"
                    android:text="0"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/red"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardViewReport"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:layout_margin="4dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="3dp">

            <LinearLayout
                android:padding="8dp"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="View Report"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    android:text="Tap to open"
                    android:textColor="#666666"
                    android:textSize="11sp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    <!-- Search + Filter row -->
    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:background="@color/white"

        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <androidx.appcompat.widget.SearchView
            android:id="@+id/searchView"

            android:layout_width="0dp"
            android:background="@drawable/search_background"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:queryHint="Search products" />

        <Button
            android:id="@+id/btnFilter"
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:layout_height="40dp"
            android:backgroundTint="@color/colorPrimary"
            android:layout_marginStart="8dp"
            android:text="Filter" />
    </LinearLayout>

    <!-- Buttons: All items | Low stock -->
    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/toggleGroupFilter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"

        android:layout_marginTop="8dp"
        app:singleSelection="true">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAllItems"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="All Items"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLowStock"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Low Stock"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />
    </com.google.android.material.button.MaterialButtonToggleGroup>

    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvProducts"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:background="@color/white"

        android:layout_weight="1" />

</LinearLayout>
