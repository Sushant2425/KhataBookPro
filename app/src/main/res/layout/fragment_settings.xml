<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/background"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header: Logo + Business Name -->
        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:src="@drawable/img"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tv_business_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Business"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_gravity="center" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" />

        <!-- ========================== ACCOUNT SECTION =========================== -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Account"
            android:background="@color/gray"

            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:padding="8dp" />

        <TextView
            android:id="@+id/opt_change_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Change Password"
            android:padding="12dp"
            android:textColor="@color/black"
            android:background="@drawable/setting_item_bg"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/opt_sms_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SMS Settings"
            android:padding="12dp"
            android:textColor="@color/black"
            android:background="@drawable/setting_item_bg"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/opt_payment_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Payment Settings"
            android:padding="12dp"
            android:textColor="@color/black"
            android:background="@drawable/setting_item_bg"
            android:layout_marginBottom="16dp" />

        <!-- ========================== APP SECTION =========================== -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="App"
            android:textStyle="bold"
            android:textSize="16sp"
            android:background="@color/gray"
            android:textColor="@color/black"
            android:padding="8dp" />

        <TextView
            android:id="@+id/opt_recycle_bin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recycle Bin"
            android:padding="12dp"
            android:textColor="@color/black"
            android:background="@drawable/setting_item_bg"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/opt_app_lock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="App Lock"
            android:padding="12dp"
            android:textColor="@color/black"
            android:background="@drawable/setting_item_bg"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/opt_help_support"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Help And Support"
            android:padding="12dp"
            android:textColor="@color/black"
            android:background="@drawable/setting_item_bg"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/opt_about_app"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About App"
            android:padding="12dp"
            android:textColor="@color/black"
            android:background="@drawable/setting_item_bg"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/opt_about_us"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About Us"
            android:padding="12dp"
            android:textColor="@color/black"
            android:background="@drawable/setting_item_bg"
            android:layout_marginBottom="16dp" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_settings_options"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="match_parent"
            android:overScrollMode="never" />

    </LinearLayout>

</ScrollView>
