<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#F5F7FA"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Profile Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="3dp"
            app:cardBackgroundColor="@android:color/white"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="24dp">

                <!-- Logo with circular background -->
                <FrameLayout
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginBottom="12dp">

                    <View
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:backgroundTint="#E3F2FD"/>

                    <ImageView
                        android:id="@+id/img_logo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:src="@drawable/img"
                        android:padding="10dp"/>
                </FrameLayout>

                <TextView
                    android:id="@+id/tv_business_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="My Business"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#2C3E50"
                    android:layout_gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Manage your account and app settings"
                    android:textSize="13sp"
                    android:textColor="#7F8C8D"
                    android:layout_marginTop="4dp"
                    android:layout_gravity="center" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ========================== ACCOUNT SECTION =========================== -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ACCOUNT"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textColor="#7F8C8D"
            android:letterSpacing="0.05"
            android:paddingStart="4dp"
            android:paddingBottom="8dp" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@android:color/white"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Change Password -->
                <LinearLayout
                    android:id="@+id/opt_change_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_lock_lock"
                        android:tint="?attr/colorPrimary"
                        android:layout_marginEnd="16dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Change Password"
                        android:textSize="15sp"
                        android:textColor="#2C3E50" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/ic_menu_more"
                        android:tint="#95A5A6"
                        android:rotation="270"/>
                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ECEFF1"
                    android:layout_marginStart="56dp"/>

                <!-- SMS Settings -->
                <LinearLayout
                    android:id="@+id/opt_sms_settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_dialog_email"
                        android:tint="?attr/colorPrimary"
                        android:layout_marginEnd="16dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="SMS Settings"
                        android:textSize="15sp"
                        android:textColor="#2C3E50" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/ic_menu_more"
                        android:tint="#95A5A6"
                        android:rotation="270"/>
                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ECEFF1"
                    android:layout_marginStart="56dp"/>

                <!-- Payment Settings -->
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/opt_payment_settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_today"
                        android:tint="?attr/colorPrimary"
                        android:layout_marginEnd="16dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Payment Settings"
                        android:textSize="15sp"
                        android:textColor="#2C3E50" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/ic_menu_more"
                        android:tint="#95A5A6"
                        android:rotation="270"/>
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ========================== APP SECTION =========================== -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="APP"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textColor="#7F8C8D"
            android:letterSpacing="0.05"
            android:paddingStart="4dp"
            android:paddingBottom="8dp" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@android:color/white"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Recycle Bin -->
                <LinearLayout
                    android:id="@+id/opt_recycle_bin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="2dp"

                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_delete"
                        android:tint="?attr/colorPrimary"
                        android:layout_marginEnd="16dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Recycle Bin"
                        android:textSize="15sp"
                        android:textColor="#2C3E50" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/ic_menu_more"
                        android:tint="#95A5A6"
                        android:rotation="270"/>
                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ECEFF1"
                    android:layout_marginStart="56dp"/>

                <!-- App Lock -->
                <LinearLayout
                    android:id="@+id/opt_app_lock"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="2dp"

                    android:padding="16dp"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_secure"
                        android:tint="?attr/colorPrimary"
                        android:layout_marginEnd="16dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="App Lock"
                        android:textSize="15sp"
                        android:textColor="#2C3E50" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/ic_menu_more"
                        android:tint="#95A5A6"
                        android:rotation="270"/>
                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ECEFF1"
                    android:layout_marginStart="56dp"/>

                <!-- Help And Support -->
                <LinearLayout
                    android:id="@+id/opt_help_support"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="2dp"

                    android:padding="16dp"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_help"
                        android:tint="?attr/colorPrimary"
                        android:layout_marginEnd="16dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Help And Support"
                        android:textSize="15sp"
                        android:textColor="#2C3E50" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/ic_menu_more"
                        android:tint="#95A5A6"
                        android:rotation="270"/>
                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ECEFF1"
                    android:layout_marginStart="56dp"/>

                <!-- About App -->
                <LinearLayout
                    android:id="@+id/opt_about_app"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="2dp"

                    android:padding="16dp"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_info_details"
                        android:tint="?attr/colorPrimary"
                        android:layout_marginEnd="16dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="About App"
                        android:textSize="15sp"
                        android:textColor="#2C3E50" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/ic_menu_more"
                        android:tint="#95A5A6"
                        android:rotation="270"/>
                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ECEFF1"
                    android:layout_marginStart="56dp"/>

                <!-- About Us -->
                <LinearLayout
                    android:id="@+id/opt_about_us"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:layout_marginTop="2dp"

                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_view"
                        android:tint="?attr/colorPrimary"
                        android:layout_marginEnd="16dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Backup Information"
                        android:textSize="15sp"
                        android:textColor="#2C3E50" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/ic_menu_more"
                        android:tint="#95A5A6"
                        android:rotation="270"/>
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Hidden RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_settings_options"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="match_parent"
            android:overScrollMode="never" />

        <!-- App Version Footer -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Version 1.0.0"
            android:textSize="12sp"
            android:textColor="#95A5A6"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"/>

    </LinearLayout>

</ScrollView>