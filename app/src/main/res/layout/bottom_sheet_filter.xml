<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:padding="16dp">

    <!-- Header -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Filter &amp; Sort"/>
        <Button
            android:id="@+id/btn_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="Reset"/>
    </RelativeLayout>

    <!-- Filter by Status -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="STATUS"/>

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chip_group_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:singleSelection="true">

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All Customers" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_you_will_get"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You Will Get" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_you_will_give"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You Will Give" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_settled_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settled Up" />

    </com.google.android.material.chip.ChipGroup>

    <!-- Sort By -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="SORT BY"/>
    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chip_group_sort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:singleSelection="true">
        <com.google.android.material.chip.Chip
            android:id="@+id/chip_most_recent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Most Recent" />
        <com.google.android.material.chip.Chip
            android:id="@+id/chip_highest_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Highest Amount" />
        <com.google.android.material.chip.Chip
            android:id="@+id/chip_lowest_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lowest Amount" />
        <com.google.android.material.chip.Chip
            android:id="@+id/chip_name_az"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name (A-Z)" />
        <com.google.android.material.chip.Chip
            android:id="@+id/chip_name_za"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name (Z-A)" />
    </com.google.android.material.chip.ChipGroup>

    <!-- Apply Button -->
    <Button
        android:id="@+id/btn_apply_filters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Apply"/>

</LinearLayout>