<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:paddingBottom="16dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#2196F3"
        android:padding="16dp">

        <!-- Drag Handle -->
        <View
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bottom_sheet_handle"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Unit"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:drawableStart="@android:drawable/ic_menu_sort_by_size"
            android:drawableTint="@android:color/white"
            android:drawablePadding="8dp" />

        <TextView
            android:id="@+id/txtUnitCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50+ units available"
            android:textSize="12sp"
            android:textColor="#E3F2FD"
            android:layout_marginTop="4dp" />

    </LinearLayout>

    <!-- Search Box -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:strokeWidth="1dp"
        app:strokeColor="#E0E0E0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_search"
                android:tint="#757575"
                android:layout_marginEnd="8dp" />

            <EditText
                android:id="@+id/etSearchUnit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Search units..."
                android:background="@android:color/transparent"
                android:textSize="15sp"
                android:textColor="#212121"
                android:textColorHint="#9E9E9E"
                android:inputType="text"
                android:maxLines="1" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Category Info -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Categories: Weight, Volume, Length, Quantity, Packaging &amp; More"
            android:textSize="11sp"
            android:textColor="#757575"
            android:textStyle="italic" />

    </LinearLayout>

    <!-- Units List -->
    <ListView
        android:id="@+id/listUnits"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:divider="#E0E0E0"
        android:dividerHeight="1dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:scrollbars="vertical"
        android:fadeScrollbars="false" />

    <!-- Footer Info -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ’¡ Tip: Type to search for your unit quickly"
        android:textSize="11sp"
        android:textColor="#757575"
        android:gravity="center"
        android:padding="12dp"
        android:background="#F5F5F5"
        android:layout_marginTop="8dp" />

</LinearLayout>