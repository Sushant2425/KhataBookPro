<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--======== Modern Material Toolbar ========-->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarAddService"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dashboard_header_background"
        android:titleTextColor="#FFFFFF"
        android:elevation="4dp"
        android:padding="10dp"
        android:theme="@style/ThemeOverlay.Material3.Dark.ActionBar" />

    <!-- MAIN AREA -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:background="@color/white"

        android:scrollbars="none">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:background="@color/white"

            android:layout_height="wrap_content">

            <!-- Page Title -->
            <TextView
                android:text="Add Service Details"
                android:textColor="#212121"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp" />

            <TextView
                android:text="Fill in the details to add a new service"
                android:textColor="#757575"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp" />

            <!-- Service Image Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardUpload"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="24dp"
                app:strokeWidth="2dp"
                app:strokeColor="#E0E0E0">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/imgService"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:src="@drawable/ic_camera"
                       />

                    <TextView
                        android:text="Add Photo"
                        android:textColor="#757575"
                        android:textSize="10sp"
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Service Name -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilName"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Service Name"
                app:boxStrokeColor="#3F51B5"
                app:boxBackgroundMode="outline"
                app:startIconTint="#757575"
                android:layout_marginBottom="16dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtServiceName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapWords"
                    android:maxLines="1" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- PRICE + UNIT in Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="16dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="12dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilPrice"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:hint="Price"
                        android:layout_weight="1"
                        app:boxStrokeColor="#3F51B5"
                        app:prefixText="â‚¹ "
                        app:prefixTextColor="#212121"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edtServicePrice"
                            android:inputType="numberDecimal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="1" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilUnit"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:hint="Unit"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        app:boxStrokeColor="#3F51B5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <AutoCompleteTextView
                            android:id="@+id/edtServiceUnit"
                            android:focusable="false"
                            android:clickable="true"
                            android:cursorVisible="false"
                            android:inputType="none"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="1" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Add SAC & GST Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddSacGst"
                android:text="+ Add SAC Code &amp; GST"
                android:textSize="15sp"
                android:textAllCaps="false"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="16dp"
                style="@style/Widget.Material3.Button.OutlinedButton"
                app:strokeColor="#3F51B5"
                app:strokeWidth="1dp"
                app:icon="@android:drawable/ic_input_add"
                app:iconTint="#3F51B5"
                android:textColor="#3F51B5"
                app:cornerRadius="12dp" />

            <!-- SAC CODE + GST (Initially Hidden) -->
            <LinearLayout
                android:id="@+id/layoutSacGst"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:background="@color/white"

                android:layout_height="wrap_content"
                android:visibility="gone"
                android:animateLayoutChanges="true">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    android:layout_marginBottom="16dp"
                    app:strokeWidth="0dp">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:background="@color/white"

                        android:layout_height="wrap_content"
                        android:padding="12dp">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tilSac"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:hint="SAC Code"
                            app:boxStrokeColor="#3F51B5"
                            app:helperText="Service Accounting Code"
                            app:helperTextTextColor="#757575"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edtSacCode"
                                android:inputType="number"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLines="1" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tilGst"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:hint="GST %"
                            android:layout_marginStart="12dp"
                            app:boxStrokeColor="#3F51B5"
                            app:suffixText="%"
                            app:suffixTextColor="#212121"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edtGst"
                                android:inputType="numberDecimal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLines="1" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- SUBMIT BUTTON -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSaveService"
                android:text="Save Service"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:backgroundTint="@color/purple_700"
                app:cornerRadius="12dp"
                app:icon="@android:drawable/ic_menu_save"
                app:iconGravity="textStart"
                android:textColor="#FFFFFF"
                android:elevation="4dp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>