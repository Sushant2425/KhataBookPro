<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:paddingStart="24dp"
    android:paddingEnd="24dp"
    android:paddingTop="24dp"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:id="@+id/tv_help_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Help &amp; Support"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="24dp"
            android:letterSpacing="0.02" />

        <!-- Contact Info Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Our Contact Info"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:textColor="@color/black"
            android:letterSpacing="0.01" />

        <!-- Phone -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="14dp"
            android:background="@drawable/setting_item_bg"
            android:layout_marginBottom="14dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_call"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_phone"
                android:tint="@color/primary_dark" />

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+919527537131"
                android:textColor="@color/primary_dark"
                android:textSize="16sp"
                android:paddingStart="20dp" />
        </LinearLayout>

        <!-- WhatsApp -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="14dp"
            android:background="@drawable/setting_item_bg"
            android:layout_marginBottom="14dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_whatsapp"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_whatsapp"
                android:tint="#25D366" />

            <TextView
                android:id="@+id/tv_whatsapp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+919527537131"
                android:textColor="#25D366"
                android:textSize="16sp"
                android:paddingStart="20dp" />
        </LinearLayout>

        <!-- Instagram -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="14dp"
            android:background="@drawable/setting_item_bg"
            android:layout_marginBottom="14dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_instagram"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_instagram" />

            <TextView
                android:id="@+id/tv_instagram"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sandhyasofttech0011"
                android:textColor="#C13584"
                android:textSize="16sp"
                android:paddingStart="20dp" />
        </LinearLayout>

        <!-- Email -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="14dp"
            android:background="@drawable/setting_item_bg"
            android:layout_marginBottom="32dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_email"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/baseline_contact_mail_24"
                android:tint="@color/primary_dark" />

            <TextView
                android:id="@+id/tv_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sandhyacomputer1@gmail.com"
                android:textColor="@color/primary_dark"
                android:textSize="16sp"
                android:paddingStart="20dp" />
        </LinearLayout>

        <!-- Support Form Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact Support"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="18dp" />

        <!-- Name Input -->
        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Your Name"
            android:inputType="textPersonName"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textSize="16sp"
            android:background="@drawable/edittext_bg"
            android:layout_marginBottom="18dp"
            android:fontFamily="sans-serif" />

        <!-- Email Input -->
        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Your Email"
            android:inputType="textEmailAddress"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textSize="16sp"
            android:background="@drawable/edittext_bg"
            android:layout_marginBottom="18dp"
            android:fontFamily="sans-serif" />

        <!-- Message Input -->
        <EditText
            android:id="@+id/et_message"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:hint="Your Message"
            android:inputType="textMultiLine"
            android:gravity="top|start"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:textSize="16sp"
            android:background="@drawable/edittext_bg"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="24dp" />

        <!-- Send Button -->
        <Button
            android:id="@+id/btn_send"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="Send"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:backgroundTint="@color/primary_dark"
            android:textColor="@color/white"
            android:elevation="6dp"
            android:layout_marginBottom="16dp" />

    </LinearLayout>
</ScrollView>
