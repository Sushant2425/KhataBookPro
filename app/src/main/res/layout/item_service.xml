<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:strokeWidth="1dp"
    app:strokeColor="#E0E0E0"
    android:backgroundTint="#FFFFFF">

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <!-- Service Image -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="64dp"
            android:layout_height="64dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:strokeWidth="1dp"
            app:strokeColor="#E8EAF6">

            <ImageView
                android:id="@+id/imgServiceLogo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="12dp"
                android:src="@drawable/ic_person"
                android:scaleType="centerCrop"
                android:background="#F5F5F5" />
        </com.google.android.material.card.MaterialCardView>

        <!-- Service Details -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginStart="14dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <!-- Service Name -->
            <TextView
                android:id="@+id/txtServiceName"
                android:text="Service Name"
                android:textStyle="bold"
                android:textColor="#212121"
                android:textSize="16sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp" />

            <!-- Price and Unit Row -->
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp">

                <TextView
                    android:id="@+id/txtServicePrice"
                    android:text="â‚¹1,000"
                    android:textColor="#3F51B5"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <View
                    android:layout_width="4dp"
                    android:layout_height="4dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_round"
                    android:backgroundTint="#BDBDBD" />

                <TextView
                    android:id="@+id/txtServiceUnit"
                    android:text="Per Hour"
                    android:textSize="13sp"
                    android:textColor="#757575"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- GST Chip -->
            <LinearLayout
                android:id="@+id/layoutGst"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/bg_round"
                android:backgroundTint="#E8F5E9"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@android:drawable/ic_dialog_info"
                    android:tint="#4CAF50"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/txtServiceGst"
                    android:text="GST 18%"
                    android:textSize="12sp"
                    android:textColor="#2E7D32"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>

        <!-- Action Icon -->
        <ImageView
            android:id="@+id/imgServiceAction"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@android:drawable/ic_menu_more"
            android:padding="6dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="#9E9E9E"
            android:layout_marginStart="8dp" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>