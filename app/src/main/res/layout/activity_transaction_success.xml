<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center">

        <!-- Success Checkmark -->
        <ImageView
            android:id="@+id/img_success"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/animated_check"
        android:contentDescription="Success"
        android:tint="@color/green"
        android:layout_marginBottom="16dp" />

        <!-- Success message with amount and customer info -->
        <TextView
            android:id="@+id/tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transaction Successful!"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="8dp"/>

        <!-- Buttons for next actions -->
        <Button
            android:id="@+id/btn_add_another"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Another Transaction"/>

        <Button
            android:id="@+id/btn_view_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Transaction History"/>

        <Button
            android:id="@+id/btn_close"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Close"/>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
