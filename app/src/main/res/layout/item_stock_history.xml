<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="8dp"
    android:paddingEnd="8dp"
    android:background="?attr/selectableItemBackground">

    <!-- TOP DATE HEADER -->
    <TextView
        android:id="@+id/tv_top_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12 Dec (Today)"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="13sp"
        android:paddingTop="6dp"
        android:layout_gravity="center"
        android:paddingBottom="6dp"
         />

    <!-- MAIN ROW -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <!-- LEFT SIDE -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1.2"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_left_date"
                android:text="12 Dec 2024"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#1A1A1A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="1dp" />

            <TextView
                android:id="@+id/tv_left_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="2dp"
                android:text="10:30 AM"
                android:textColor="#7A7A7A"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv_left_balance"
                android:text="Bal: ₹20,000"
                android:textSize="11sp"
                android:textColor="#555555"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="2dp" />

            <TextView
                android:id="@+id/tv_left_note"
                android:text="Purchase Invoice"
                android:textSize="10sp"
                android:textColor="#8E8E8E"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- CENTER SIDE for OUT -->
        <LinearLayout
            android:id="@+id/layout_stock_out"
            android:orientation="vertical"
            android:background="@drawable/background_balance_give"
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:layout_height="wrap_content"
            android:gravity="center"
           >

            <TextView
                android:id="@+id/tv_out_qty"
                android:text="10"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#E53935"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />

            <TextView
                android:id="@+id/tv_out_unit"
                android:text="pcs"
                android:textSize="10sp"
                android:textColor="#7A7A7A"
                android:layout_marginTop="2dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />

            <TextView
                android:id="@+id/tv_out_amount"
                android:text="₹500"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#E53935"
                android:layout_marginTop="3dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />
        </LinearLayout>

        <!-- RIGHT SIDE for IN -->
        <LinearLayout
            android:id="@+id/layout_stock_in"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:background="@drawable/background_balance_get"
            android:layout_height="wrap_content"
            android:gravity="center"
           >

            <TextView
                android:id="@+id/tv_in_qty"
                android:text="20"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#43A047"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_in_unit"
                android:text="pcs"
                android:textSize="10sp"
                android:textColor="#7A7A7A"
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_in_amount"
                android:text="₹1000"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#43A047"
                android:layout_marginTop="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DDDDDD" />

</LinearLayout>
