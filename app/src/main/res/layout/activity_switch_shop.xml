<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:text="Switch / Select Shop"
        android:textSize="22sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:paddingBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- Create Shop Button -->
    <LinearLayout
        android:id="@+id/btnCreateShop"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:background="@drawable/bg_button_gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/ic_add"
            android:tint="#000000"
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <TextView
            android:text="Create New Shop"
            android:textSize="16sp"
            android:textColor="#000000"
            android:paddingStart="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <!-- Use without shop -->
    <LinearLayout
        android:id="@+id/btnWithoutShop"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_button_green"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/animated_check"
            android:tint="#FFFFFF"
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <TextView
            android:text="Use Without Shop (Direct Save Mode)"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:paddingStart="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DDDDDD"
        android:layout_marginTop="15dp"/>

    <!-- Shops List Title -->
    <TextView
        android:text="Your Shops"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvShops"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>
