<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_recycle_bin"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:titleTextColor="@android:color/white"
        app:title="Recycle Bin"
        app:navigationIconTint="@color/white"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:layout_scrollFlags="scroll|enterAlways" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"

        android:padding="3dp"
        android:layout_marginTop="?attr/actionBarSize">

        <androidx.appcompat.widget.SearchView
            android:id="@+id/search_view_recycle_bin"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_search_rounded"
            android:queryHint="Search transactions..."
            android:iconifiedByDefault="false"
            android:padding="6dp" />
        <TextView
            android:id="@+id/tv_auto_delete_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="âš  Deleted transactions are automatically removed permanently after 45 days."
            android:textSize="13sp"
            android:textColor="@color/error"
            android:padding="8dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_recycle_bin"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingTop="8dp" />
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
