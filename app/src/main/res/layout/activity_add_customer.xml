<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F9F9F9">

    <!-- Top App Bar -->

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_add_customer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_receipt_header"
        android:elevation="4dp"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:title="Add Customer"
        app:titleCentered="true"
        app:navigationIconTint="@color/white"
        app:titleTextColor="@color/white" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="8dp"
            android:padding="28dp"
            android:clipToPadding="false"
            android:clipChildren="false">

            <!-- Customer Name -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_customer_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Customer Name"
                android:layout_marginBottom="22dp"
                app:endIconMode="custom"
                app:endIconDrawable="@drawable/ic_person"
                app:endIconTint="@color/gray">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_customer_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:inputType="textPersonName" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Phone -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_customer_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone Number"
                android:layout_marginBottom="22dp"
                app:endIconMode="custom"
                app:endIconDrawable="@drawable/ic_phone"
                app:endIconTint="@color/gray">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_customer_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:inputType="phone" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Email -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_customer_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="22dp"
                android:hint="Email (Optional)">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_customer_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:inputType="textEmailAddress" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Address -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_customer_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Address (Optional)"
                android:layout_marginBottom="28dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_customer_address"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="top"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:inputType="textMultiLine" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Save Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_save_customer"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:backgroundTint="@color/primary"
                android:text="Save Customer"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
