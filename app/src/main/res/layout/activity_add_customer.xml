<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">

    <!-- Modern App Bar with Gradient -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="0dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar_add_customer"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@drawable/ic_arrow_back"
            android:background="@drawable/dashboard_header_background"
            app:navigationIconTint="@android:color/white"
            app:title="Customer Details"
            app:titleCentered="true"
            app:titleTextColor="@android:color/white" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Scrollable Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="16dp"
            android:paddingBottom="24dp">

            <!-- Profile Image Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@color/gray"

                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:background="@color/gray"

                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- Profile Picture with Ring -->
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            app:cardCornerRadius="60dp"
                            app:cardElevation="4dp"
                            app:strokeColor="?attr/colorPrimary"
                            app:strokeWidth="3dp">

                            <ImageView
                                android:id="@+id/iv_customer_image"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/image_placeholder_bg"
                                android:contentDescription="Customer profile photo"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_person" />

                        </com.google.android.material.card.MaterialCardView>

                        <!-- Camera Badge -->
                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/fab_change_image"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="bottom|end"
                            android:layout_marginEnd="4dp"
                            android:layout_marginBottom="4dp"
                            android:contentDescription="Change photo"
                            app:fabCustomSize="40dp"
                            app:fabSize="mini"
                            app:srcCompat="@drawable/ic_camera"
                            app:tint="@android:color/white" />

                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Upload Photo"
                        android:textColor="?attr/colorPrimary"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Optional"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Basic Information Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                android:background="@color/gray"

                app:cardElevation="2dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/gray"

                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Section Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:orientation="horizontal">



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="Basic Information"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- Customer Name (REQUIRED) -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_customer_name"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="Customer Name"
                        app:endIconDrawable="@drawable/ic_person"
                        app:endIconMode="custom"
                        app:endIconTint="?attr/colorPrimary"
                        app:errorEnabled="true"
                        app:helperText="Required *"
                        app:helperTextTextColor="@color/required_red"
                        app:startIconDrawable="@drawable/ic_person"
                        app:startIconTint="?attr/colorPrimary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_customer_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName|textCapWords"
                            android:maxLines="1"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="16sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Phone Number (REQUIRED) -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_customer_phone"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="Phone Number"
                        app:endIconMode="custom"
                        app:endIconTint="?attr/colorPrimary"
                        app:errorEnabled="true"
                        app:helperText="Required *"
                        app:helperTextTextColor="@color/required_red"
                        app:prefixText="+91 "
                        app:startIconDrawable="@drawable/ic_phone"
                        app:startIconTint="?attr/colorPrimary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_customer_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="phone"
                            android:maxLength="10"
                            android:maxLines="1"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="16sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Email (Optional) -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_customer_email"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Email Address"
                        app:endIconMode="clear_text"
                        app:errorEnabled="true"
                        app:helperText="Optional"
                        app:helperTextTextColor="@color/text_secondary"
                        app:startIconTint="?attr/colorPrimary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_customer_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textEmailAddress"
                            android:maxLines="1"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="16sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Business Details Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:background="@color/gray"

                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/gray"

                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Section Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="Business Details"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- GSTIN (Optional) -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_customer_gstin"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="GSTIN"
                        app:endIconMode="clear_text"
                        app:helperText="Optional"
                        app:helperTextTextColor="@color/text_secondary"
                        app:startIconTint="?attr/colorPrimary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_customer_gstin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textCapCharacters"
                            android:maxLength="15"
                            android:maxLines="1"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="16sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- PAN (Optional) -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_customer_pan"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="PAN Number"
                        app:endIconMode="clear_text"
                        app:helperText="Optional"
                        app:helperTextTextColor="@color/text_secondary"
                        app:startIconTint="?attr/colorPrimary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_customer_pan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textCapCharacters"
                            android:maxLength="10"
                            android:maxLines="1"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="16sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Address & Notes Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@color/gray"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/gray"

                    android:padding="20dp">

                    <!-- Section Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:orientation="horizontal">



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="Additional Details"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- Address (Optional) -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_customer_address"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="Complete Address"
                        app:endIconMode="clear_text"
                        app:helperText="Optional"
                        app:helperTextTextColor="@color/text_secondary"
                        app:startIconTint="?attr/colorPrimary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_customer_address"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:gravity="top|start"
                            android:inputType="textMultiLine|textCapSentences"
                            android:maxLines="5"
                            android:minLines="3"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="16sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Notes (Optional) -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_customer_notes"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Notes / Remarks"
                        app:endIconMode="clear_text"
                        app:helperText="Optional"
                        app:helperTextTextColor="@color/text_secondary"
                        app:startIconTint="?attr/colorPrimary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_customer_notes"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:gravity="top|start"
                            android:inputType="textMultiLine|textCapSentences"
                            android:maxLines="4"
                            android:minLines="3"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="16sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Delete Button (Only in Edit Mode) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_delete_customer"
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="Delete Customer"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:visibility="gone"
                app:backgroundTint="@color/error_light"
                app:icon="@drawable/ic_delete"
                app:iconGravity="start"
                app:iconTint="@color/error_dark" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Auto-Save Indicator -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_auto_save_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="16dp"
        android:visibility="gone"
        app:cardBackgroundColor="?attr/colorSurfaceVariant"
        app:cardCornerRadius="24dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingTop="10dp"
            android:paddingEnd="16dp"
            android:paddingBottom="10dp">

            <ProgressBar
                android:id="@+id/progress_saving"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tv_save_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Saving..."
                android:textColor="?attr/colorOnSurface"
                android:textSize="14sp" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>